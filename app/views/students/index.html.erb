<center>
  <h1 align="center">List of students</h1>
  <table style="border: 2px solid black" border="1" cellspacing="0">
    <thead>
      <tr>
        <th style="text-align: center;">Name</th>
        <th style="text-align: center;">Email</th>
        <th style="text-align: center;">Password</th>
        <th colspan="3" style="text-align: center;">Option</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td style="padding: 10px;"><%= student.name %></td>
          <td style="padding: 10px;"><%= student.email %></td>
          <td style="padding: 10px;"><%= student.password %></td>
          <td style="padding: 10px;"><%= link_to 'View', student_path(student) %></td>
          <td style="padding: 10px;"><%= link_to "Edit", edit_student_path(student) %></td>
          <td style="padding: 10px;">
            <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</center>
